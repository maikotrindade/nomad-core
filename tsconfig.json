{
    "compilerOptions": {
        "target": "es2017",
        "lib": [
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noEmit": true,
        
        "jsx": "react-jsx"
    },
    "ts-node": {
        "esm": true
    },
    "exclude": [
        "node_modules"
    ]
}